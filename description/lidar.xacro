<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
  <!-- === Tiny LiDAR puck (visual only) === -->
  <link name="laser_frame">
    <!-- Small top puck: radius 0.015 m, height 0.015 m -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.015" length="0.015"/></geometry>
      <material name="blue"/>
    </visual>
    <!-- Optional skinny mast so it looks mounted -->
    <visual>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry><cylinder radius="0.004" length="0.04"/></geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.015" length="0.015"/></geometry>
    </collision>

    <!-- Light inertial to match the tiny visual -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="5e-5" ixy="0" ixz="0" iyy="5e-5" iyz="0" izz="8e-5"/>
    </inertial>
  </link>

  <!-- Fixed mount: centered on chassis, ~6 cm above it (adjust as you like) -->
  <joint name="joint-chassis-lidar" type="fixed">
    <parent link="chassis-link"/>
    <child link="laser_frame"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo Fortress (gz-sim) sensor: GPU lidar publishing on a gz transport topic -->
 <gazebo reference="laser_frame">
        <material>Gazebo/Black</material>

        <sensor name="laser" type="gpu_lidar">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>false</visualize>
            <update_rate>10</update_rate>
            <lidar>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.3</min>
                    <max>12</max>
                </range>
            </lidar>
            <topic>scan</topic>
            <gz_frame_id>laser_frame</gz_frame_id>
        </sensor>
    </gazebo>
</robot>
